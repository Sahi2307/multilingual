# Civic Complaint System - Environment Variables Template
# Copy this file to .env and fill in your values

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database (for local development only - not needed if using Supabase)
CIVIC_DB_PATH=data/civic_system.db

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@civiccomplaints.gov

# SMS Configuration (optional - for Twilio integration)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Application Settings
SECRET_KEY=your_secret_key_for_session_encryption
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=3

# Admin Account (change after first login)
DEFAULT_ADMIN_EMAIL=admin@civiccomplaints.gov
DEFAULT_ADMIN_PASSWORD=Admin@123

# Environment
ENVIRONMENT=development
DEBUG=True
